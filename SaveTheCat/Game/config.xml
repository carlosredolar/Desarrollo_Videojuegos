<!-- Config file for the game -->

<config>
  <app framerate_cap="30">
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <audio>
    <music>
      <folder>audio/music/</folder>
      <musicVolumeModifier value="0.3" />
    </music>
    <sfx> 
      <folder>audio/fx/</folder>
      <sfxVolumeModifier value="1" />
    </sfx>
  </audio>
	
  <map>
    <folder>maps/</folder>
    <level1>
	<player_position x="50" y="400"/>
    </level1>
    <level2>
	<player_position x="50" y="400"/>
    </level2>
  </map>
  <player>
    <folder>audio/fx</folder>
    <folder>sprites/characters</folder>
    <position x="200" y="400" />	
    <speed value="10"/>
    <jumpImpulse value="25"/>
    <gravity value="1.4"/>		
  </player>
</config>